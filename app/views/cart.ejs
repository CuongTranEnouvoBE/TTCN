<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Cart | E-Shopper</title>
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/font-awesome.min.css" rel="stylesheet">
    <link href="css/prettyPhoto.css" rel="stylesheet">
    <link href="css/price-range.css" rel="stylesheet">
    <link href="css/animate.css" rel="stylesheet">
    <link href="css/main.css" rel="stylesheet">
    <link href="css/responsive.css" rel="stylesheet">
    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <script src="js/respond.min.js"></script>
    <![endif]-->
    <link rel="shortcut icon" href="images/ico/favicon.ico">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="images/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="images/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="images/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="images/ico/apple-touch-icon-57-precomposed.png">
</head>
<!--/head-->

<body>
    <%- include("partials/header") %>
    <section id="cart_items" style="margin-bottom: 30px;">
        <div class="container">
            <div class="row text-center " style="margin-bottom: 10px; padding: 10px 0 ; background-color: #fe980f;">
                <div class="col-lg-4">Sản phẩm</div>
                <div class="col-lg-2">Giá</div>
                <div class="col-lg-2">Số lượng</div>
                <div class="col-lg-2">Tổng tiền</div>
                <div class="col-lg-1"></div>
                <div class="col-lg-1"></div>
            </div>
            <div class="row">
                <% user.cart.forEach(e=>{ %>
                    <div class="cart-item" style="padding: 15px 0; border-bottom: 1px solid #ccc;">
                        <div class="row text-center">
                            <div class="col-lg-4"><%- e.name %> - <%- e.storage %> - <%- e.color %></div>
                            <div class="col-lg-2"><%- e.price.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".") %></div>
                            <div class="col-lg-2">1</div>
                            <div class="col-lg-2"><%- e.price.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".") %></div>
                            <div class="col-lg-1"><input type="checkbox" name="select-box" id=""></div>
                            <div class="col-lg-1"><i class="fa fa-times"></i></div>
                        </div>
                    </div>

                <% }) %>
            </div>
        </div>
    </section>
    <!--/#cart_items-->

    <section id="do_action">
        <div class="container">

            <div class="row">
                <div class="col-sm-4">
                    <div class="total_area pull-right">
                        <ul>
                            <li>Chọn sản phẩm: <span>  (3) </span></li>
                        </ul>

                    </div>
                </div>

                <div class="col-sm-4">
                    <div class="total_area pull-right">
                        <ul>
                            <li>Tổng thanh toán: <span> 32.000.000đ</span></li>
                        </ul>

                    </div>
                </div>

                <div class="col-sm-4">
                    <div class="total_area pull-right">
                        <a class="btn btn-default check_out" href=""> Mua hàng </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--/#do_action-->
    <%- include("partials/footer") %>
    <%- include("partials/scripts") %>

 
</body>

</html>