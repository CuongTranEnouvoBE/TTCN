    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Đăng kí | Walmart</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Material+Icons"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Material+Icons+Outlined"
      rel="stylesheet"
    />
    <script src="https://use.fontawesome.com/4611f582cf.js"></script>
    <link rel="shortcut icon" href="/favicon/favicon.ico" />
    <link rel="stylesheet" href="/css/base.css" />
    <link rel="stylesheet" href="/css/login&register.css" />
    <style>
      #form .wrap_input {
        margin-bottom: 0;
      }
      .facebook_btn {
        width: 100%;
      }
      #form h3 {
        margin-bottom: 20px;
      }
      #form .form-group {
        margin-bottom: 15px;
      }
      .or {
        margin: 5px 0;
      }
      .other {
        margin: 10px 0 5px 0;
      }

    </style>
  </head>
  <body>
    <div class="container">
      <div class="wrap">
        <form id="form" method="POST">
          <h3 class="txt">ĐĂNG KÝ TÀI KHOẢN</h3>
          <div class="form-group">
            <div class="wrap_input">
              <input
                id="fullname"
                type="text"
                name="full_name"
                placeholder="Họ và tên"
              />
              <span class="focus-input"></span>
            </div>
          </div>
          <div class="form-group">
            <div class="wrap_input">
              <input id="email" type="text" name="email" placeholder="Email" />
              <span class="focus-input"></span>
            </div>
          </div>
          <div class="form-group">
            <div class="wrap_input">
              <input
                id="password"
                type="password"
                name="password"
                placeholder="Mật khẩu, lớn hơn 6 ký tự"
              />
              <span class="focus-input"></span>
            </div>
          </div>
          <div class="form-group">
            <div class="wrap_input">
              <input
                id="password_confirmation"
                type="password"
                placeholder="Nhập lại mật khẩu"
              />
              <span class="focus-input"></span>
            </div>
          </div>

          <div class="btn form_btn txt">ĐĂNG KÝ</div>
          <span class="form-message"></span>
          <span class="invalid-info-message"><%- message %></span>
          <div class="or txt"><span>Hoặc</span></div>
          <div class="other txt">
            <span>Bạn có tài khoản?</span>
            <a href="../login/" class="login " style="text-decoration: none;">Đăng nhập</a>
            <br />
          </div>
        </form>
      </div>
    </div>
    <script src='/js/register.js'></script>
  </body>
