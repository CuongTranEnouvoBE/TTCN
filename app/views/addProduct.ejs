<!DOCTYPE html>
<html lang="en">
  <%- include("partials/admin-header") %>
  <body class="nav-md">
    <div class="container body">
      <!-- sidebar -->
      <%- include("partials/admin-sidebar") %>
      <!-- /sidebar -->

      <!-- top navigation -->
      <%- include("partials/admin-navbar") %>
      <!-- /top navigation -->
      <!--Modal add-product-->
      <div id="addform" class="modal fade js-modal">
        <div class="modal-dialog">
          <div class="modal-content js-modal-content">
            <div class="modal-header">
              <button type="button" class="close js-modal-close">
                <span>x</span>
              </button>
              <h4 class="modal-title">Thêm sản phẩm</h4>
            </div>

            <form action="" id="demo1" class="form-horizontal form-label-left">
              <div class="modal-body">
                <div class="form-group">
                  <div class="col-md-12 col-sm-12 col-xs-12">
                    <input type="hidden" name="id" value="0" />
                  </div>
                </div>

                <div class="form-group">
                  <label for="" class="control-label col-md-3 col-sm-2 col-xs-12">Mã sản phẩm</label>
                  <div class="col-md-7 col-xs-12">
                    <input type="text" name="" id="" class="form-control" placeholder="Mã sản phẩm" />
                  </div>
                </div>

                <div class="form-group">
                  <label for="" class="control-label col-md-3 col-sm-2 col-xs-12">Tên sản phẩm</label>
                  <div class="col-md-7 col-xs-12">
                    <input type="text" name="" id="" class="form-control" placeholder="Tên sản phẩm" />
                  </div>
                </div>

                <div class="form-group">
                  <label for="" class="control-label col-md-3 col-sm-2 col-xs-12">Dòng sản phẩm</label>
                  <div class="col-md-7 col-xs-12">
                    <select class="form-control" name="level" id="">
                      <option value="1">Iphone</option>
                      <option value="2">Samsung</option>
                      <option value="3">Xiaomi</option>
                      <option value="4">Vivo</option>
                      <option value="5">Vsmart</option>
                    </select>
                  </div>
                </div>

                <div class="form-group">
                  <label for="" class="control-label col-md-3 col-sm-2 col-xs-12">Giá nhập</label>
                  <div class="col-md-7 col-xs-12">
                    <input type="text" name="" id="" class="form-control" placeholder="Giá" />
                  </div>
                </div>

                <div class="form-group">
                  <label for="" class="control-label col-md-3 col-sm-2 col-xs-12">Ngày nhập</label>
                  <div class="col-md-7 col-xs-12">
                    <input type="datetime-local" name="" id="" class="form-control" placeholder="Ngày nhập" />
                  </div>
                </div>

                <div class="form-group">
                  <label for="" class="control-label col-md-3 col-sm-2 col-xs-12">Số lượng</label>
                  <div class="col-md-7 col-xs-12">
                    <input type="text" name="" id="" class="form-control" placeholder="Số lượng" />
                  </div>
                </div>
              </div>

              <div class="modal-footer">
                <button class="btn btn-default">Thoát</button>
                <button class="btn btn-primary">Lưu</button>
              </div>
            </form>
          </div>
        </div>
      </div>
      <!--/modal add-->
    </div>
  </body>
</html>
